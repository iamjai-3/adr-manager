{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist/public",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/server" },
    { "source": "/(.*)",     "destination": "/index.html" }
  ],
  "functions": {
    "api/server.ts": {
      "maxDuration": 60
    }
  }
}
